html
  head
    script(src='https://unpkg.com/htmx.org@1.9.2')
    style(type='text/css').
      :root {
        --color1: #331D2C;
        --color2: #3F2E3E;
        --color3: #A78295;
        --color4: #EFE1D1;
      }

      body {
        background-color:var(--color1);
      }

      * {
        font-family: 'Courier New', monospace;
      }

      .main-container {
        width: 50%;
        margin: 10px auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }

      .title{
        color:var(--color4);
      }

      .title a {
        text-decoration: none;
        color: var(--color4);
      }

      #htmx-logo {
        color: white;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif !important;
        font-size: 40pt;
      }

      #htmx-logo-span {
        color: #3d72d7;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif !important;
      }

      #counter-number {
        font-size: 25pt;
        color: var(--color4);
      }

      #container {
        display: flex;
        align-items: center;
        height: 100px;
        gap: 10px;
      }

      .button-counter {
        border: none;
        background-color: var(--color2);
        width: 50px;
        height: 50px;
        border-radius: 8px;
        cursor: pointer;
        transition: .2s ease;
      }

      .button-counter:hover {
        background-color: var(--color4);
        transform: scale(1.05);
      }


